@using VeryIntelligentName.Data.Models
@using VeryIntelligentName.Web.ViewModels
@model CharAddViewModel
@{
    ViewData["Title"] = "Add Character";
}
<style>
    td {
        border: 1px solid #000;
    }

    tr:nth-child(even) {
        background-color: rgba(212, 212, 212, 0.4);
    }

    th {
        border: 1px solid #000;
    }

        th:nth-child(even), td:nth-child(even) {
            background-color: rgba(212, 212, 212, 0.4);
        }

    th, td {
        padding: 5px;
    }
</style>
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="CreateChar" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 mb-2">
                    @{
                        var classes = Model.Classes?.Select(c => new SelectListItem() { Value = c.Id.ToString(), Text = c.Name, });
                    }
                    <label asp-for="@Model.ClassId" class="form-label-add-edit">Select Class</label>
                    <select asp-for="ClassId" class="form-control" aria-required="true" asp-items="@classes">
                        <option value="">Select Class...</option>
                    </select>
                    <span asp-validation-for="@Model.ClassId" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>