@using Microsoft.AspNetCore.Identity
@using VeryIntelligentName.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">

    <div class="nav-login-dropdown">
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="nav-login-dropbtn" href="@Url.Action("Index", "Home")" title="Manage">@UserManager.GetUserName(User)</a>
            <div class="nav-login-dropdown-content">
                <form class="form-inline nav-login-dropdown-content-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-login-dropdown-content-item">Logout</button>
                </form>
            </div>
        }
        else
        {
            <a class="nav-login-dropbtn" id="login" href="/Identity/Account/Login">Login</a>
            <div class="nav-login-dropdown-content">
                <a class="nav-login-dropdown-content-item" id="register" href="/Identity/Account/Register">Register</a>
            </div>
        }
    </div>
</ul>
